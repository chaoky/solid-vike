{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["bun-types", "vite/client"],
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "paths": {
      "/*": ["./*"]
    },
    "noEmit": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true
  }
}
